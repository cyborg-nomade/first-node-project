<%- include('includes/header.ejs') %>

<div class="container-fluid">
  <% if (locals.error) { %>
    <% error.forEach(err => { %>
      <div class="alert alert-danger"><%= err.msg %></div>
    <% }) %>
  <% } %>
  <%- messages() -%>
  <form method="post" action="/users/register" class="form-signin">
    <h1 class="h3 mb-3 font-weight-normal">User Registration</h1>
    <label for="name" class="sr-only">Name</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Name" value="<%= (!!locals.name)?name:'' %>"  required autofocus>
    <label for="email" class="sr-only">E-mail</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="E-mail" value="<%= (!!locals.email)?email:'' %>" required>
    <label for="username" class="sr-only">Username</label>
    <input type="text" id="username" name="username" class="form-control" placeholder="Username" value="<%= (!!locals.username)?username:'' %>" required>
    <label for="password" class="sr-only">Password</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
    <label for="passwordConf" class="sr-only">Password Confirmation</label>
    <input type="password" id="passwordConf" name="passwordConf" class="form-control"
      placeholder="Password Confirmation" required>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    <p>Already have an account? <a href="/users/login">Log In</a>!</p>
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2019</p>
  </form>
</div>

<%- include('includes/footer.ejs') %>
